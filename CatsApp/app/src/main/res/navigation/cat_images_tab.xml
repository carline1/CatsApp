<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/catsImagesFragment"
    android:id="@+id/cat_images_tab">

    <fragment
        android:id="@+id/catsImagesFragment"
        android:name="com.example.catsapp.ui.fragments.CatsImagesFragment"
        android:label="fragment_cats_images"
        tools:layout="@layout/fragment_cats_images" >
        <action
            android:id="@+id/action_catsImagesFragment_to_cardCatFragment"
            app:destination="@id/cardCatFragment" />
        <action
            android:id="@+id/action_catsImagesFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
    </fragment>
    <dialog
        android:id="@+id/filterFragment"
        android:name="com.example.catsapp.ui.fragments.FilterFragment"
        android:label="fragment_filter"
        tools:layout="@layout/fragment_filter" >
        <action
            android:id="@+id/action_filterFragment_to_catsImagesFragment"
            app:destination="@id/catsImagesFragment" />
    </dialog>
    <fragment
        android:id="@+id/cardCatFragment"
        android:name="com.example.catsapp.ui.fragments.CardCatFragment"
        android:label="fragment_card_cat"
        tools:layout="@layout/fragment_card_cat" >
        <argument
            android:name="imageId"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="imageUrl"
            app:argType="string"
            app:nullable="true" />
    </fragment>

</navigation>