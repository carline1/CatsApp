<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/catsImagesFragment">

    <fragment
        android:id="@+id/catsImagesFragment"
        android:name="com.example.catsapp.ui.fragments.CatsImagesFragment"
        android:label="fragment_cats_images"
        tools:layout="@layout/fragment_cats_images" >
        <action
            android:id="@+id/action_catsImagesFragment_to_cardCatFragment"
            app:destination="@id/cardCatFragment" />
        <action
            android:id="@+id/action_catsImagesFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
    </fragment>
    <fragment
        android:id="@+id/loadedCatsFragment"
        android:name="com.example.catsapp.ui.fragments.LoadedCatsFragment"
        android:label="fragment_loaded_cats"
        tools:layout="@layout/fragment_loaded_cats" >
        <action
            android:id="@+id/action_loadedCatsFragment_to_imagePickerDialogFragment2"
            app:destination="@id/imagePickerDialogFragment2" />
        <action
            android:id="@+id/action_loadedCatsFragment_self"
            app:destination="@id/loadedCatsFragment" />
        <action
            android:id="@+id/action_loadedCatsFragment_to_catAnalysisCardFragment"
            app:destination="@id/catAnalysisCardFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouritesCatsFragment"
        android:name="com.example.catsapp.ui.fragments.FavouritesCatsFragment"
        android:label="fragment_favourites_cats"
        tools:layout="@layout/fragment_favourite_cats" >
        <action
            android:id="@+id/action_favouritesCatsFragment_self"
            app:destination="@id/favouritesCatsFragment" />
        <action
            android:id="@+id/action_favouritesCatsFragment_to_cardCatFragment"
            app:destination="@id/cardCatFragment" />
    </fragment>
    <fragment
        android:id="@+id/cardCatFragment"
        android:name="com.example.catsapp.ui.fragments.CardCatFragment"
        android:label="fragment_card_cat"
        tools:layout="@layout/fragment_card_cat" >
        <argument
            android:name="imageId"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="imageUrl"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="breed"
            app:argType="com.example.catsapp.api.models.res.BreedResponse"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="fragmentSelection"
            app:argType="com.example.catsapp.ui.fragments.CardFragmentSelectionEnum" />
    </fragment>
    <dialog
        android:id="@+id/filterFragment"
        android:name="com.example.catsapp.ui.fragments.FilterFragment"
        android:label="fragment_filter"
        tools:layout="@layout/fragment_filter" >
        <action
            android:id="@+id/action_filterFragment_to_catsImagesFragment"
            app:destination="@id/catsImagesFragment" />
    </dialog>
    <fragment
        android:id="@+id/imagePickerDialogFragment2"
        android:name="com.example.catsapp.ui.fragments.ImagePickerDialogFragment"
        android:label="ImagePickerDialogFragment" />
    <fragment
        android:id="@+id/catAnalysisCardFragment"
        android:name="com.example.catsapp.ui.fragments.CatAnalysisCardFragment"
        android:label="CatAnalysisCardFragment" >
        <argument
            android:name="imageUrl"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="id"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>