                                android:transformPivotX="0dp"
                                android:transformPivotY="20dp"
                                android:numStars="5"
                                tools:rating="3.5" />

                        </FrameLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/social_needs_title_card_cat"
                            android:textColor="@color/black" />

                    <FrameLayout
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end">

                            <RatingBar
                                android:id="@+id/cardImageSocialNeeds"
                                style="?android:attr/ratingBarStyleIndicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleX="0.7"
                                android:scaleY="0.7"
                                android:transformPivotX="0dp"
                                android:transformPivotY="20dp"
                                android:numStars="5"
                                tools:rating="3.5" />

                    </FrameLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/stranger_friendly_title_card_cat"
                            android:textColor="@color/black" />


                        <FrameLayout
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end">

                            <RatingBar
                                android:id="@+id/cardImageStrangerFriendly"
                                style="?android:attr/ratingBarStyleIndicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleX="0.7"
